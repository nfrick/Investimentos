@model IEnumerable<InvWeb.DTOs.ContaDto>

@{
    ViewBag.Title = "Contas";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Create")">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Nova Conta
    </a>
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Agencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContaCorrente)
        </th>
        <th class="text-right">
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @{
                    var img = $@"/Images/{item.Banco}20.jpg";
                }
                <img src="@img" alt="@item.ContaCorrente" class="image-responsive" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Agencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContaCorrente)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <a href="@Url.Action("Edit", new {id = item.ContaId})">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    Editar
                </a>
                |
                <a href="@Url.Action("Details", new {id = item.ContaId})">
                    <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
                    Detalhes
                </a>
            </td>
        </tr>
    }

</table>
